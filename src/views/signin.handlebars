{{#> formpage}}
  <h1 class="mb-10 text-center text-3xl font-medium">Sign in to your account</h1>

  <form action="/signin" method="post" class="flex flex-col gap-7">

    {{#if flash}}
      <div>
        <p class="mb-2 text-red-500">There was an error signing in. Please try
          again.</p>
        <ul class="list-disc pl-6">
          {{{flash}}}
        </ul>
      </div>
    {{/if}}

    <input type="hidden" name="_csrf" value="{{_csrfToken}}" />
    <section>
      <label for="email" class="mb-1 block font-semibold">Email</label>
      <input
        id="email"
        class="block w-full rounded-md border p-2"
        name="username"
        type="email"
        autocomplete="email"
        placeholder="Enter your email"
        required
      />
    </section>
    <section>
      <label for="current-password" class="mb-1 block font-semibold">Password</label>
      <input
        id="current-password"
        class="block w-full rounded-md border p-2"
        name="password"
        type="password"
        autocomplete="current-password"
        placeholder="Enter your password"
        required
      />
    </section>
    <button
      type="submit"
      class="mt-4 inline-block rounded border-gray-700 bg-emerald-700 px-4 py-3 text-white shadow-md transition-colors hover:bg-emerald-800"
    >Sign In</button>
  </form>
  <div class="mt-10">
    <p class="text-sm">Don't have an account yet?
      <a href="/signup" class="text-sky-800">Sign up here.</a>
    </p>
  </div>

{{/formpage}}