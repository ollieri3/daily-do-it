{{#section "head"}}
  <link rel="stylesheet" href="/calendar.css" />
{{/section}}

{{#section "scripts"}}
  <script defer src="/calendar.js"></script>
{{/section}}

<div class="w-full p-5">

  {{! Notice Banners }}
  {{#if userNotActive}}
    <div
      class="m-auto mb-8 mt-4 max-w-prose rounded-md bg-emerald-100 px-4 py-2"
    >
      <h1 class="mb-2 font-semibold text-emerald-950">Welcome!</h1>
      <p class="text-emerald-950">Please confirm your email address by clicking
        the link in the email sent to you.</p>
    </div>
  {{else if userHasNoDaysComplete}}
    <div class="m-auto mb-8 mt-4 max-w-prose rounded-md bg-blue-100 px-4 py-2">
      <h1 class="mb-2 font-semibold text-blue-900">Start you habit tracking
        journey!</h1>
      <p class="text-blue-900">Once you've completed a habit, mark it complete
        using the calendar below</p>
    </div>
  {{/if}}

  <div id="calendar">
    {{#months}}
      <div id="month">
        <div id="month-name" class="ml-1 font-bold">{{month}}</div>
        <div id="days">
          {{#days}}
            {{#if isComplete}}
              <button
                id="{{date}}"
                class="day complete"
                data-date="{{date}}"
                data-is-complete="{{isComplete}}"
              >{{day}}</button>
            {{else if isToday}}
              <button
                id="{{date}}"
                class="day today"
                data-date="{{date}}"
              >{{day}}</button>
            {{else}}
              <button
                id="{{date}}"
                class="day"
                data-date="{{date}}"
              >{{day}}</button>
            {{/if}}

          {{/days}}
        </div>
      </div>
    {{/months}}
  </div>
</div>

{{! Sticky button to jump to day }}
<div
  id="jump-to-today-container"
  class="sticky bottom-0 flex w-full justify-center bg-white bg-opacity-80 py-4 backdrop-blur-sm md:invisible"
>
  <button
    id="jump-to-today"
    href="#{{today}}"
    class="rounded-lg bg-blue-600 px-4 py-3 font-semibold text-blue-100"
  >Jump to today</button>
</div>