{{#section "head"}}
  <link rel="stylesheet" href="/calendar.css" />
{{/section}}

{{#section "scripts"}}
  <script src="/calendar.js"></script>
{{/section}}

<div id="calendar">
  {{#months}}
    <div id="month">
      <div id="month-name" class="ml-1 font-bold">{{month}}</div>
      <div id="days">
        {{#days}}
          {{#if isComplete}}
            <button
              id="day"
              class="day complete"
              data-date="{{date}}"
              data-is-complete="{{isComplete}}"
            >{{day}}</button>
          {{else if isToday}}
            <button
              id="day"
              class="day today"
              data-date="{{date}}"
            >{{day}}</button>
          {{else}}
            <button id="day" class="day" data-date="{{date}}">{{day}}</button>
          {{/if}}

        {{/days}}
      </div>
    </div>
  {{/months}}
</div>