{
  "name": "daily-do-it",
  "version": "1.0.0",
  "description": "",
  "main": "dist/daily-do-it.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"npx tsc --watch\" \"npx tsc --watch --project tsconfig.frontend.json  \" \"nodemon\" \"npm run tailwind:watch\"",
    "build": "npm run copy-files && npm run tailwind && npx tsc && npx tsc --project tsconfig.frontend.json",
    "prebuild": "npm run clean",
    "clean": "rm -rf dist",
    "copy-files": "copyfiles -u 1 src/views/**/* src/views/*.* src/public/img/*.* src/public/*.css src/public/*.ico src/public/favicons/*.* dist/ -e src/public/main.css",
    "tailwind": "tailwindcss -i ./src/public/main.css -o ./dist/public/main.css",
    "tailwind:watch": "npm run tailwind -- --watch"
  },
  "author": "Oliver Ridsdale",
  "license": "ISC",
  "engines": {
    "node": "18.16.1"
  },
  "volta": {
    "node": "18.16.1"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^9.0.0",
    "csrf": "^3.1.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "express-rate-limit": "^6.9.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.1",
    "tailwindcss": "^3.3.3",
    "validator": "^13.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/node": "^20.3.2",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.10.2",
    "@types/validator": "^13.11.1",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "portfinder": "^1.0.32",
    "prettier": "3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "typescript": "^5.1.3"
  }
}
