{
  "name": "daily-do-it",
  "version": "1.0.0",
  "description": "",
  "main": "dist/daily-do-it.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"npx tsc --watch\" \"nodemon\" \"npm run tailwind:watch\"",
    "build": "npx tsc",
    "prebuild": "npm run clean && npm run copy-files",
    "clean": "rm -rf dist",
    "copy-files": "copyfiles -u 1 src/views/**/* src/views/*.* dist/",
    "tailwind:watch": "tailwindcss -i ./src/public/main.css -o ./dist/public/main.css --watch"
  },
  "author": "Oliver Ridsdale",
  "license": "ISC",
  "volta": {
    "node": "18.16.1"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^9.0.0",
    "dayjs": "^1.11.9",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.1",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/node": "^20.3.2",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.10.2",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "portfinder": "^1.0.32",
    "prettier": "3.0.0",
    "typescript": "^5.1.3"
  }
}
